@model BilgiYarismasi.Web.Models.YarisIndexViewModel
@{
    ViewBag.Title = "Yarışma";
}

<h2>Yeni Yarışmaya Başla</h2>

<div class="row">
    <div class="col col-lg-4">
        <a class="btn btn-lg btn-warning" href="@Url.Action("SingleKonu")">
            <span class="fa fa-3x fa-user"></span>
            Single Yarışmaya Başla
        </a>
        <table class="table table-hover table-bordered table table-striped" style="margin-top:15px;width:270px;">
            <tr>
                <td>En son Single Puanı</td>
                <td>@Model.EnSonSinglePuan</td>
            </tr>
            <tr>
                <td>En Yüksek Single Puan</td>
                <td>@Model.EnYuksekSinglePuan</td>
            </tr>
        </table>
    </div>
    <div class="col col-lg-4">
        <a class="btn btn-lg btn-primary" href="@Url.Action("MultiKonu")">
            <span class="fa fa-3x fa-users"></span>
            Multiplayer Yarışmaya Başla
        </a>
        <table class="table table-hover table-bordered table table-striped" style="margin-top:15px;width:320px;">
            <tr>
                <td>En Son Multi Puanı</td>
                <td>@Model.MultiEnsonPuan</td>
            </tr>
            <tr>
                <td>En Yüksek Multiplayer Puanı</td>
                <td>@Model.MultiEnYuksekPuan</td>
            </tr>
        </table>
    </div>
</div>